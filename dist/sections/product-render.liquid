            <!-- add product 2 select    -->
            <form action="" class="product-form">
              <div class="product-form__select">
                {% for product_option in product.options_with_values %}
                  <div class="product-form__select-group">
                      <label>{{ product_option.name }}</label>
                      <select>
                        {% for value in product_option.values %}
                          <option {% if product_option.selected_value == value %}selected{% endif %}>
                            {{ value }}
                          </option>
                        {% endfor %}
                      </select>
                  </div>
                {% endfor %}
              </div>
              
              <div class="product__submit">
                <input min="1" type="number" id="quantity" value="1" />
                <button class="product__add">Add to cart</button>
              </div>
            </form>
            
            <div class="product desc">{{ product.description }}</div>
        </div>

    </div>
